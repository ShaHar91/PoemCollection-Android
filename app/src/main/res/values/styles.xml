<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@color/general_background</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextAppearance.MaterialComponents.Body3" parent="TextAppearance.AppCompat.Body2">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.0178571429</item>
    </style>

    <style name="AppTheme.Landing" parent="AppTheme">
        <item name="android:windowBackground">@drawable/landing_backg</item>

        <item name="android:statusBarColor">@color/colorPrimaryDark_Translucent</item>
    </style>

    <style name="AppTheme.Entry" parent="AppTheme">
        <!-- In the Activity the content will be set to fullScreen so the content will be drawn behind the statusBar-->
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Widget.MaterialComponents.Button.General" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="EntryHeaderText">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline3
        </item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/entry_header_background_translucent</item>
        <item name="android:paddingStart">62dp</item>
        <item name="android:paddingEnd">62dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
    </style>

    <style name="Some" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:textColor">@android:color/transparent</item>
    </style>

    <style name="EntryTextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">6dp</item>
    </style>

    <style name="MyProgressBar" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/custom_progress_bar_horizontal</item>
        <item name="android:minHeight">8dip</item>
        <item name="android:maxHeight">8dip</item>
        <item name="android:progressBackgroundTint">@color/colorGrey_300</item>
        <item name="android:progressTint">@color/colorPrimary</item>
    </style>

</resources>
