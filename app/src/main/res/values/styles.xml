<resources xmlns:tools="http://schemas.android.com/tools">

    <!--  TODO: Check out dark theme for the app!!! https://medium.com/@vapoyan/perfectus-dark-theme-910e30a38f25-->



    <style name="TextAppearance.MaterialComponents.Body3" parent="TextAppearance.AppCompat.Body2">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.0178571429</item>
    </style>

    <style name="EntryHeaderText">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline3
        </item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/entry_header_background_translucent</item>
        <item name="android:paddingStart">62dp</item>
        <item name="android:paddingEnd">62dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
    </style>

    <style name="Material.Toolbar.Transparent.ExpandedTitleAppearance" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:textColor">@android:color/transparent</item>
    </style>

    <style name="ProgressBar.Horizontal.Rating.Global.Label" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">9dp</item>
        <item name="android:textAppearance">?attr/textAppearanceCaption</item>
    </style>

    <style name="ProgressBar.Horizontal.Rating.Global" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/custom_progress_bar_horizontal</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:minHeight">8dp</item>
        <item name="android:maxHeight">8dp</item>
        <item name="android:progressBackgroundTint">@color/colorGrey_300</item>
        <item name="android:progressTint">@color/colorPrimary</item>
    </style>

    <style name="Category.Chip.TextAppearance" parent="@style/TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <!--<editor-fold desc="Write or edit a review dialog">-->
    <style name="MaterialAlertDialog.Review" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="alertDialogStyle">@style/MaterialAlertDialog.Review.Dialog.Style</item>
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialog.Review.Title.Style</item>
    </style>

    <style name="MaterialAlertDialog.Review.Dialog.Style" parent="MaterialAlertDialog.MaterialComponents">
        <item name="shapeAppearance">@style/MaterialAlertDialog.Review.Dialog.Appearance</item>
    </style>

    <style name="MaterialAlertDialog.Review.Dialog.Appearance" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="MaterialAlertDialog.Review.Title.Style" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <!-- This is the details of the "TextAppearance.MaterialComponents.Headline6"-->
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">0.0125</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>
    <!--</editor-fold>-->

    <style name="Shape.Circle" parent="">
        <item name="cornerFamily">rounded</item>
        5<item name="cornerSize">50%</item>
    </style>
</resources>
